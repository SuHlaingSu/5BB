<?xml version="1.0" encoding="utf-8"?>
<com.fivebb.shared.pods.EmptyViewPod
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical">

    <mm.technomation.mmtext.MMTextView
        android:id="@+id/lbl_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:lineSpacingMultiplier="1.2"
        android:paddingLeft="@dimen/empty_favourite_text_padding"
        android:paddingRight="@dimen/empty_favourite_text_padding"
        android:text="@string/msg_default_empty"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/text_regular_3x"
        android:contentDescription="@string/content_description_empty_label"
        />

    <ImageView
        android:id="@+id/iv_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/lbl_empty"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_medium_2"
        android:src="@drawable/empty_data_placeholder"
        android:contentDescription="@string/content_description_empty_image"
        android:visibility="gone"/>

    <mm.technomation.mmtext.MMButtonView
        android:id="@+id/btn_action_for_empty"
        style="@style/WithBlackShadow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lbl_empty"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_medium_2"
        android:contentDescription="@string/content_description_empty_action"
        android:visibility="gone"/>

</com.fivebb.shared.pods.EmptyViewPod>
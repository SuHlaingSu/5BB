<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppButton">
        <item name="android:paddingLeft">@dimen/margin_medium_2</item>
        <item name="android:paddingRight">@dimen/margin_medium_2</item>
        <item name="android:textSize">@dimen/text_regular_2x</item>
        <item name="android:textColor">@color/black_full</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:shadowColor">@color/black_full</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="WithBlackShadow">
        <item name="android:shadowColor">@color/black_full</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="AccentBorderButton" parent="AppButton">
        <item name="android:background">@drawable/bg_round_border_button</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:foreground">@drawable/ripple_accent</item>
    </style>

    <style name="PinWidget" />

    <style name="PinWidget.PinView" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="AppButton.editButton">
        <item name="android:layout_width">@dimen/edit_button_width</item>
        <item name="android:layout_height">@dimen/edit_button_height</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:shadowColor">@color/black_full</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">0</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium_2</item>
        <item name="android:foreground">@drawable/ripple_white</item>
    </style>

    <style name="AppButton.editButton.hasMarginTop">
        <item name="android:layout_marginTop">@dimen/margin_medium</item>

    </style>

    <style name="AppButton.editButton.hasMarginTop.done">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="AppButton.editButton.hasMarginTop.verify">
        <item name="android:background">@color/success_green</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="AccentBorderButton.NoBorder">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:foreground">@drawable/ripple_accent</item>
    </style>

</resources>
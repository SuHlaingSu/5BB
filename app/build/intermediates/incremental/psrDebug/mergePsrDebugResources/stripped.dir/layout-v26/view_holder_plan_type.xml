<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="130dp"
        android:layout_height="@dimen/plan_type_height"
        android:background="@drawable/plan_type_border_primary"
        android:paddingTop="@dimen/margin_medium"
        android:paddingBottom="@dimen/margin_medium"
        android:paddingStart="@dimen/margin_medium_3"
        android:paddingEnd="@dimen/margin_medium_3"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginStart="@dimen/margin_medium_2"
        android:weightSum="2.5">

    <mm.technomation.mmtext.MMTextView
            android:id="@+id/tvPlanType"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            tools:text="XXS"
            android:focusableInTouchMode="true"
            android:defaultFocusHighlightEnabled="true"
            android:singleLine="true"
            android:scrollHorizontally="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:ellipsize="marquee"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_heading_2x"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"/>

    <mm.technomation.mmtext.MMTextView
            android:id="@+id/tvInternetSpeed"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginBottom="@dimen/margin_medium"
            android:textColor="@color/primary_text"
            android:layout_gravity="center"
            android:gravity="center"
            tools:text="@string/dummy_internet_speed"
            android:textStyle="bold"
            android:textSize="@dimen/text_regular_2x"/>

</LinearLayout>
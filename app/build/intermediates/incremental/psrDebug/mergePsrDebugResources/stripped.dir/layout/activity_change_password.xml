<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@color/white_full"
        tools:context="com.fivebb.selfcare.activities.ChangePasswordActivity">

    <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_keyboard_arrow_left_black_48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="@dimen/margin_medium_2"
            android:layout_marginTop="@dimen/margin_medium_2"/>

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.5"
            android:background="@drawable/bg_main_image_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivBack"
            app:layout_constraintTop_toTopOf="parent"/>

    <mm.technomation.mmtext.MMTextView
            android:id="@+id/tvScreenTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/title_change_password"
            app:layout_constraintTop_toTopOf="@id/ivBack"
            app:layout_constraintBottom_toBottomOf="@id/ivBack"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/ScreenTitle"/>

    <androidx.cardview.widget.CardView
            android:id="@+id/cvChangePassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/ivBack"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/margin_medium_2"
            android:layout_marginStart="@dimen/margin_medium_2"
            android:layout_marginEnd="@dimen/margin_medium_2"
            app:cardCornerRadius="@dimen/margin_small">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilOldPassword"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/margin_medium_3"
                    android:layout_marginStart="@dimen/margin_medium_2"
                    android:layout_marginEnd="@dimen/margin_medium_2"
                    android:hint="@string/lbl_old_password"
                    app:hintTextAppearance="@style/TextInputLayoutHint"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etOldPassword"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edittext_height"
                        android:inputType="textPassword"
                        android:drawablePadding="@dimen/margin_medium"
                        android:drawableEnd="@drawable/ic_visibility_off_24dp"
                        style="@style/RegularEditText"/>

            </com.google.android.material.textfield.TextInputLayout>

            <View
                    android:id="@+id/dividerOldPassword"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/divider"
                    app:layout_constraintTop_toBottomOf="@id/tilOldPassword"
                    app:layout_constraintStart_toStartOf="@id/tilOldPassword"
                    app:layout_constraintEnd_toEndOf="@id/tilOldPassword"
                    android:layout_marginTop="@dimen/margin_medium_2"/>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilNewPassword"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/dividerOldPassword"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/margin_medium_2"
                    android:layout_marginStart="@dimen/margin_medium_2"
                    android:layout_marginEnd="@dimen/margin_medium_2"
                    android:hint="@string/lbl_new_password"
                    app:hintTextAppearance="@style/TextInputLayoutHint"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etNewPassword"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edittext_height"
                        android:inputType="textPassword"
                        android:drawablePadding="@dimen/margin_medium"
                        android:drawableEnd="@drawable/ic_visibility_off_24dp"
                        style="@style/RegularEditText"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilConfirmPassword"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tilNewPassword"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/margin_medium_2"
                    android:layout_marginStart="@dimen/margin_medium_2"
                    android:layout_marginEnd="@dimen/margin_medium_2"
                    android:hint="@string/lbl_confirm_password"
                    app:hintTextAppearance="@style/TextInputLayoutHint"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etConfirmPassword"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edittext_height"
                        android:inputType="textPassword"
                        android:drawablePadding="@dimen/margin_medium"
                        android:drawableEnd="@drawable/ic_visibility_off_24dp"
                        style="@style/RegularEditText"/>

            </com.google.android.material.textfield.TextInputLayout>


            <mm.technomation.mmtext.MMButtonView
                    android:id="@+id/btnSubmit"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/button_height"
                    android:text="@string/lbl_submit"
                    app:layout_constraintTop_toBottomOf="@id/tilConfirmPassword"
                    app:layout_constraintStart_toStartOf="@id/tilConfirmPassword"
                    app:layout_constraintEnd_toEndOf="@id/tilConfirmPassword"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="@dimen/margin_medium_3"
                    android:layout_marginTop="@dimen/margin_xlarge"
                    style="@style/ButtonPrimary"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>

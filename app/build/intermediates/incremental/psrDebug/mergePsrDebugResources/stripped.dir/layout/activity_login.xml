<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@color/white_full"
        android:fitsSystemWindows="true"
        tools:context="com.fivebb.selfcare.activities.LoginActivity">

    <ImageView android:layout_width="0dp"
               android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.55"
               android:background="@drawable/bg_login_image"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tvForgotPassword"
            android:layout_marginBottom="@dimen/margin_large"/>

    <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.5"
            app:layout_constraintDimensionRatio="16:8"
            android:background="@drawable/fivebb_logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_marginStart="@dimen/margin_medium_2"/>

    <TextView
        android:id="@+id/tvVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="v0.5.0"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/cvLogin"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/margin_medium_2"
            android:layout_marginTop="@dimen/margin_large"
            android:textSize="@dimen/text_regular_2x"
            android:textColor="@color/divider"/>

    <mm.technomation.mmtext.MMTextView
            android:id="@+id/tvScreenTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/lbl_login"
            app:layout_constraintTop_toBottomOf="@id/ivLogo"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/margin_medium_2"
            android:layout_marginTop="@dimen/margin_medium_2"
            style="@style/ScreenTitle"/>

    <androidx.cardview.widget.CardView
            android:id="@+id/cvLogin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvScreenTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardCornerRadius="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_medium_2"
            android:layout_marginStart="@dimen/margin_medium_2"
            android:layout_marginEnd="@dimen/margin_medium_2">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilAccountNumber"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/margin_medium_3"
                    android:layout_marginStart="@dimen/margin_medium_2"
                    android:layout_marginEnd="@dimen/margin_medium_2"
                    android:hint="@string/lbl_customer_account_number"
                    app:hintTextAppearance="@style/TextInputLayoutHint"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">


                <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                        android:id="@+id/etAccountNumber"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edittext_height"
                        android:paddingStart="@dimen/margin_medium_2"
                        android:text=""
                        android:completionThreshold="0"
                        android:inputType="textCapCharacters"
                        style="@style/RegularEditText"/>

                <!--<com.google.android.material.textfield.TextInputEditText-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="@dimen/edittext_height"-->
                <!--style="@style/RegularEditText"/>-->

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilPassword"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tilAccountNumber"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/margin_medium_2"
                    android:layout_marginStart="@dimen/margin_medium_2"
                    android:layout_marginEnd="@dimen/margin_medium_2"
                    android:hint="@string/lbl_password"
                    app:hintTextAppearance="@style/TextInputLayoutHint"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edittext_height"
                        android:drawablePadding="@dimen/margin_medium"
                        android:text=""
                        android:drawableEnd="@drawable/ic_visibility_off_24dp"
                        android:inputType="textPassword"
                        style="@style/RegularEditText"/>

            </com.google.android.material.textfield.TextInputLayout>

            <CheckBox
                    android:id="@+id/cbRememberMe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lbl_remember_me"
                    app:layout_constraintTop_toBottomOf="@id/tilPassword"
                    app:layout_constraintStart_toStartOf="@id/tilPassword"
                    android:layout_marginTop="@dimen/margin_medium_2"
                    android:elevation="@dimen/margin_xsmall"
                    android:textSize="@dimen/text_regular"
                    android:textColor="@color/secondary_text"/>

            <mm.technomation.mmtext.MMButtonView
                    android:id="@+id/btnLogin"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/button_height"
                    android:text="@string/lbl_login"
                    app:layout_constraintTop_toBottomOf="@id/cbRememberMe"
                    app:layout_constraintStart_toStartOf="@id/tilPassword"
                    app:layout_constraintEnd_toEndOf="@id/tilPassword"
                    android:layout_marginTop="@dimen/margin_medium_2"
                    style="@style/ButtonPrimary"/>

            <View
                    android:id="@+id/vEndLogin"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@id/btnLogin"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/margin_medium_3"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <mm.technomation.mmtext.MMTextView
            android:id="@+id/tvForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbl_forgot_password"
            app:layout_constraintTop_toBottomOf="@id/cvLogin"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/margin_medium_2"
            android:layout_marginTop="@dimen/margin_large"
            android:foreground="@drawable/ripple_white"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/text_regular"/>

</androidx.constraintlayout.widget.ConstraintLayout>

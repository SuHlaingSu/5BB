<?xml version="1.0" encoding="utf-8"?>

                                                            

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginHorizontal="@dimen/margin_medium"
            android:layout_marginBottom="@dimen/margin_medium" android:tag="layout/item_recharge_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/margin_medium">

            <ImageView
                    android:id="@+id/imgTags"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                    android:id="@+id/lblGB"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="300 GB"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:textColor="@color/black_full"
                    android:textSize="18sp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/lblRechargePack"
                    app:layout_constraintTop_toTopOf="parent" />
            <TextView
                    android:id="@+id/lblRechargePack"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Recharge Pack"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/black_full"
                    android:layout_marginHorizontal="@dimen/margin_medium"
                    app:layout_constraintStart_toEndOf="@id/lblGB"
                    app:layout_constraintTop_toTopOf="parent" />

            <TextView
                    android:id="@+id/lblDays"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="60 Days"
                    android:gravity="left"
                    android:textColor="@color/secondary_text"
                    android:layout_marginTop="@dimen/margin_medium"
                    app:layout_constraintStart_toStartOf="@id/lblGB"
                    app:layout_constraintTop_toBottomOf="@id/lblGB"/>

            <TextView
                    android:id="@+id/lblPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30dp"
                    android:text="15000 MMK"
                    android:textColor="@color/black_full"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/lblDays"
                    app:layout_constraintEnd_toEndOf="@id/imgTags"
                    app:layout_constraintTop_toBottomOf="@id/lblGB" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
         

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginBottom="@dimen/margin_medium">
            <TextView
                    android:id="@+id/lblPlanName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Plan Name"
                    android:gravity="left"
                    android:textStyle="bold"
                    android:textColor="@color/black_full"
                    android:textSize="@dimen/text_regular_3x"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:layout_marginHorizontal="@dimen/margin_medium_3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            <TextView
                    android:id="@+id/lblPlanNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Plan Note"
                    android:textColor="@color/blue"
                    android:gravity="left"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:layout_marginHorizontal="@dimen/margin_medium_3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/lblPlanName"/>
            <TextView
                    android:id="@+id/lblPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price"
                    android:textSize="@dimen/text_heading_1x"
                    android:gravity="left"
                    android:textColor="@color/black_full"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:layout_marginHorizontal="@dimen/margin_medium_3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/lblPlanNote"/>

            <TextView
                    android:id="@+id/lblTaxNote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="12sp"
                    android:layout_marginTop="@dimen/margin_medium"
                    app:layout_constraintStart_toStartOf="@id/lblPrice"
                    app:layout_constraintTop_toBottomOf="@id/lblPrice"/>

            <Button
                    android:id="@+id/btnSelect"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="Select"
                    android:textColor="@color/white_full"
                    android:background="@drawable/bg_fill_primary_round"
                    android:gravity="center"
                    android:layout_marginEnd="@dimen/margin_medium"
                    app:layout_constraintTop_toBottomOf="@id/lblPrice"
                    app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
         

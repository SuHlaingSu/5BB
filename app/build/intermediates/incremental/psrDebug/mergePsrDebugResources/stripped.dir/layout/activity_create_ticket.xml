<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_full"
        tools:context="com.fivebb.selfcare.activities.CreateTicketActivity">

    <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_medium_2"
            android:layout_marginTop="@dimen/margin_medium_2"
            android:background="@drawable/ic_keyboard_arrow_left_black_48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <ImageView
            android:id="@+id/bgMain"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.5"
            android:background="@drawable/bg_main_image_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivBack"
            app:layout_constraintTop_toTopOf="parent"/>

    <mm.technomation.mmtext.MMTextView
            android:id="@+id/tvScreenTitle"
            style="@style/ScreenTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/lbl_create_ticket"
            app:layout_constraintBottom_toBottomOf="@id/ivBack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivBack"
            app:layout_constraintTop_toTopOf="@id/ivBack" />

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivBack">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                android:background="@color/white_full"
                android:focusable="true"
                android:focusableInTouchMode="true">

            <androidx.cardview.widget.CardView
                    android:id="@+id/cvSourceAndType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_medium_2"
                    android:layout_marginTop="@dimen/margin_medium_2"
                    android:layout_marginEnd="@dimen/margin_medium_2"
                    android:focusable="true"
                    app:cardCornerRadius="@dimen/margin_small"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <!--                    <org.mmtextview.components.MMTextView-->
                    <!--                            android:id="@+id/lblSource"-->
                    <!--                            android:layout_width="0dp"-->
                    <!--                            android:layout_height="wrap_content"-->
                    <!--                            android:text="@string/lbl_source"-->
                    <!--                            app:layout_constraintStart_toStartOf="parent"-->
                    <!--                            app:layout_constraintTop_toTopOf="parent"-->
                    <!--                            style="@style/CategoryTitle"-->
                    <!--                            android:layout_marginStart="@dimen/margin_medium_2"-->
                    <!--                            android:layout_marginTop="@dimen/margin_medium_2"-->
                    <!--                            app:layout_constraintHorizontal_weight="1"-->
                    <!--                            app:layout_constraintEnd_toStartOf="@+id/lblTicketType"/>-->

                    <!--                    <Spinner-->
                    <!--                            android:id="@+id/spSource"-->
                    <!--                            android:layout_width="0dp"-->
                    <!--                            android:layout_height="0dp"-->
                    <!--                            app:layout_constraintTop_toBottomOf="@id/lblSource"-->
                    <!--                            app:layout_constraintStart_toStartOf="@id/lblSource"-->
                    <!--                            app:layout_constraintBottom_toBottomOf="parent"-->
                    <!--                            android:layout_marginBottom="@dimen/margin_medium_3"-->
                    <!--                            android:layout_marginTop="@dimen/margin_medium"-->
                    <!--                            style="@style/CreateTicket"-->
                    <!--                            app:layout_constraintHorizontal_weight="1"-->
                    <!--                            app:layout_constraintEnd_toStartOf="@+id/spTicketType"-->
                    <!--                            android:layout_marginEnd="@dimen/margin_medium_2"/>-->

                    <mm.technomation.mmtext.MMTextView
                            android:id="@+id/lblTicketType"
                            style="@style/CategoryTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_medium_2"
                            android:layout_marginTop="@dimen/margin_medium_2"
                            android:layout_marginEnd="@dimen/margin_medium_2"
                            android:text="@string/lbl_ticket_type"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_weight="1"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    <Spinner
                            android:id="@+id/spTicketType"
                            style="@style/CreateTicket"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_medium"
                            android:layout_marginBottom="@dimen/margin_medium_3"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="@id/lblTicketType"
                            app:layout_constraintHorizontal_weight="1"
                            app:layout_constraintStart_toStartOf="@id/lblTicketType"
                            app:layout_constraintTop_toBottomOf="@id/lblTicketType" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                    android:id="@+id/cvCategory"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_medium_2"
                    android:layout_marginTop="@dimen/margin_medium_2"
                    android:layout_marginEnd="@dimen/margin_medium_2"
                    app:cardCornerRadius="@dimen/margin_small"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cvSourceAndType">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <mm.technomation.mmtext.MMTextView
                            android:id="@+id/lblProblemCategory"
                            style="@style/CategoryTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_medium_2"
                            android:layout_marginTop="@dimen/margin_medium_2"
                            android:layout_marginEnd="@dimen/margin_medium_2"
                            android:text="@string/lbl_problem_category" />

                    <Spinner
                            android:id="@+id/spProblemCategory"
                            style="@style/CreateTicket"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_medium_2"
                            android:layout_marginTop="@dimen/margin_medium"
                            android:layout_marginEnd="@dimen/margin_medium_2"
                            android:layout_marginBottom="@dimen/margin_medium_3" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:id="@+id/cvTicketSummary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_medium_2"
                    android:layout_marginTop="@dimen/margin_medium_2"
                    android:layout_marginEnd="@dimen/margin_medium_2"
                    android:layout_marginBottom="@dimen/margin_medium_3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cvCategory">

                <mm.technomation.mmtext.MMTextView
                        android:id="@+id/lblTicketSummary"
                        style="@style/CategoryTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_medium_2"
                        android:layout_marginTop="@dimen/margin_medium_2"
                        android:layout_marginEnd="@dimen/margin_medium_2"
                        android:text="@string/lbl_ticket_summary" />

                <EditText
                        android:id="@+id/etTicketSummary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_medium_2"
                        android:layout_marginTop="@dimen/margin_xxlarge"
                        android:layout_marginEnd="@dimen/margin_medium_2"
                        android:layout_marginBottom="@dimen/margin_medium_2"
                        android:background="@drawable/bg_border_divider"
                        android:gravity="start"
                        android:minLines="5"
                        android:padding="@dimen/margin_medium"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/text_regular" />

            </androidx.cardview.widget.CardView>

            <mm.technomation.mmtext.MMButtonView
                    android:id="@+id/btnSubmit"
                    style="@style/ButtonPrimary"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/button_height"
                    android:layout_marginStart="@dimen/margin_medium_2"
                    android:layout_marginTop="@dimen/margin_xxlarge"
                    android:layout_marginEnd="@dimen/margin_medium_2"
                    android:layout_marginBottom="@dimen/margin_medium_3"
                    android:text="@string/lbl_submit"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cvTicketSummary" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <mm.technomation.mmtext.MMTextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dummy_activity_log_date"
            android:textColor="@color/primary_text"
            android:textStyle="bold"
            android:textSize="@dimen/text_regular_2x"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_alignTop="@id/tvLogContent"
            android:layout_marginTop="@dimen/margin_medium_2"/>

    <mm.technomation.mmtext.MMTextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dummy_activity_log_time"
            android:textSize="12sp"
            android:layout_below="@id/tvDate"
            android:layout_alignStart="@id/tvDate"
            android:layout_alignEnd="@id/tvDate"
            android:gravity="center_horizontal"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvLogContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dummy_activity_log_content"
            android:layout_toEndOf="@id/tvDate"
            android:layout_marginStart="@dimen/margin_medium_2"
            android:layout_marginEnd="@dimen/margin_medium_2"
            android:layout_below="@id/tvLogTitle"
            android:background="@drawable/bg_primary_border"
            android:paddingTop="@dimen/margin_medium_2"
            android:paddingEnd="@dimen/margin_medium"
            android:paddingStart="@dimen/margin_medium_2"
            android:paddingBottom="@dimen/margin_medium_2"
            android:layout_marginTop="-14dp"
            android:minHeight="@dimen/min_height_activity_log"
            android:textSize="@dimen/text_regular"
            android:textColor="@color/primary_text"/>

    <mm.technomation.mmtext.MMTextView
            android:id="@+id/tvLogTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/tvLogContent"
            android:layout_marginTop="@dimen/margin_medium_2"
            android:layout_marginEnd="@dimen/margin_medium_2"
            android:paddingStart="@dimen/margin_medium_2"
            android:paddingEnd="@dimen/margin_medium_2"
            android:paddingTop="@dimen/margin_small"
            android:paddingBottom="@dimen/margin_medium"
            android:text="@string/dummy_activity_log_category"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_regular"
            android:textStyle="bold"
            android:background="@drawable/bg_acitivty_log_title"/>

</RelativeLayout>
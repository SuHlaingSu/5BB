<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" xmlns:tools="http://schemas.android.com/tools"
        android:layout_marginEnd="@dimen/margin_medium"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_marginBottom="@dimen/margin_medium_2"
        app:cardCornerRadius="@dimen/margin_small">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <mm.technomation.mmtext.MMTextView
                android:id="@+id/tvDueDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_medium"
                android:layout_marginTop="@dimen/margin_medium_2"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/text_regular"
                android:textStyle="bold"
                tools:text="@string/dummy_due_date" />

        <mm.technomation.mmtext.MMTextView
                style="@style/AttributeName"
                android:id="@+id/lblBillNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvDueDate"
                android:layout_alignStart="@id/tvDueDate"
                android:layout_alignTop="@id/tvBillNumber"
                android:layout_alignBottom="@id/tvBillNumber"
                android:text="@string/lbl_bill_no"/>

        <mm.technomation.mmtext.MMTextView
                style="@style/AttributeValue"
                android:id="@+id/tvBillNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvDueDate"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/margin_medium_2"
                android:gravity="end"
                android:layout_toEndOf="@id/lblBillNo"
                android:layout_marginStart="@dimen/margin_medium_2"
                android:layout_marginEnd="@dimen/margin_medium"
                android:paddingEnd="@dimen/margin_small"
                tools:text="@string/service_plan"/>

        <mm.technomation.mmtext.MMTextView
                style="@style/AttributeName"
                android:id="@+id/lblDiscount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/tvDueDate"
                android:layout_alignTop="@id/tvUnpaidAmount"
                android:layout_alignBottom="@id/tvUnpaidAmount"
                android:layout_below="@id/lblBillNo"
                android:gravity="center_vertical"
                android:text="@string/lbl_unpaid_amount"/>

        <mm.technomation.mmtext.MMTextView
                android:id="@+id/tvUnpaidAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lblBillNo"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginEnd="@dimen/margin_medium"
                android:gravity="end"
                android:paddingStart="@dimen/margin_small"
                android:paddingEnd="@dimen/margin_small"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/text_heading_1x"
                android:textStyle="bold"
                tools:text="@string/value_small_kyat" />

        <mm.technomation.mmtext.MMButtonView
                style="@style/BSButtonPrimary"
                android:id="@+id/btnPayment"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_below="@id/tvUnpaidAmount"
                android:layout_marginTop="@dimen/margin_medium_3"
                android:layout_marginStart="@dimen/margin_medium"
                android:layout_marginEnd="@dimen/margin_medium"
                android:layout_marginBottom="@dimen/margin_medium_2"
                android:textColor="@color/black_full"
                android:background="@drawable/bg_primary_border"
                android:text="@string/lbl_payment"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
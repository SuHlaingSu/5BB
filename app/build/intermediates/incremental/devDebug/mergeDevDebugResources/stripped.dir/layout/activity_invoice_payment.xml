<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fivebb.selfcare.activities.InvoicePaymentActivity">

    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_medium_2"
        android:background="@drawable/ic_keyboard_arrow_left_black_48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_main_image_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintStart_toEndOf="@id/ivBack"
        app:layout_constraintTop_toTopOf="parent" />

    <mm.technomation.mmtext.MMTextView
        android:id="@+id/tvScreenTitle"
        style="@style/ScreenTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/lbl_invoice_payment"
        app:layout_constraintBottom_toBottomOf="@id/ivBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivBack" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivBack">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollView"
            android:layout_above="@+id/btnOpenMobileBankingApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_medium"
                android:background="@color/white_full">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvPaymentAmount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:layout_marginEnd="@dimen/margin_medium"
                    app:cardCornerRadius="@dimen/margin_small"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <mm.technomation.mmtext.MMTextView
                            android:id="@+id/tvDueDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_medium"
                            android:layout_marginTop="@dimen/margin_medium_2"
                            android:textColor="@color/primary_text"
                            android:textSize="@dimen/text_regular"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:text="@string/dummy_due_date" />

                        <mm.technomation.mmtext.MMTextView
                            android:id="@+id/lblBillNo"
                            style="@style/CategoryTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_medium"
                            android:text="@string/lbl_bill_no"
                            app:layout_constraintBottom_toBottomOf="@id/tvBillNumber"
                            app:layout_constraintStart_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@id/tvBillNumber" />

                        <!--<org.mmtextview.components.MMTextView
                                android:id="@+id/lblAmount"
                                style="@style/CategoryTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/lbl_charges"
                                android:visibility="gone"
                                app:layout_constraintBottom_toBottomOf="@id/tvAmount"
                                app:layout_constraintEnd_toStartOf="@+id/tvAmount"
                                app:layout_constraintStart_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="@id/lblBillNo"
                                app:layout_constraintTop_toTopOf="@id/tvAmount" />-->

                        <mm.technomation.mmtext.MMTextView
                            android:id="@+id/tvBillNumber"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_medium_3"
                            android:layout_marginEnd="@dimen/margin_medium"
                            android:gravity="end"
                            android:textColor="@color/primary_text"
                            android:textSize="@dimen/text_regular_3x"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/lblBillNo"
                            app:layout_constraintTop_toBottomOf="@id/tvDueDate"
                            tools:text="INV0000000261879" />

                        <!--<org.mmtextview.components.MMTextView
                                android:id="@+id/tvAmount"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_medium_2"
                                android:gravity="end"
                                android:textColor="@color/primary_text"
                                android:textSize="@dimen/text_regular_3x"
                                android:visibility="gone"
                                android:textStyle="bold"
                                app:layout_constraintEnd_toEndOf="@id/tvBillNumber"
                                app:layout_constraintStart_toEndOf="@+id/lblAmount"
                                app:layout_constraintTop_toBottomOf="@id/tvBillNumber"
                                tools:text="@string/dummy_plan_cost" />-->

                        <mm.technomation.mmtext.MMTextView
                            android:id="@+id/lblUnpaidAmount"
                            style="@style/CategoryTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lbl_unpaid_amount"
                            app:layout_constraintBottom_toBottomOf="@id/tvUnpaidAmount"
                            app:layout_constraintStart_toStartOf="@id/lblBillNo"
                            app:layout_constraintTop_toTopOf="@id/tvUnpaidAmount" />

                        <mm.technomation.mmtext.MMTextView
                            android:id="@+id/tvUnpaidAmount"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_medium_2"
                            android:layout_marginBottom="@dimen/margin_medium_2"
                            android:gravity="end"
                            android:textColor="@color/primary_text"
                            android:textSize="@dimen/text_regular_3x"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="@id/tvBillNumber"
                            app:layout_constraintStart_toEndOf="@+id/lblUnpaidAmount"
                            app:layout_constraintTop_toBottomOf="@id/tvBillNumber"
                            tools:text="@string/dummy_plan_cost" />

                        <mm.technomation.mmtext.MMTextView
                            android:id="@+id/lblBillDate"
                            style="@style/CategoryTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/lbl_bill_date"
                            app:layout_constraintBottom_toBottomOf="@id/tvBillDate"
                            app:layout_constraintStart_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@id/lblUnpaidAmount"
                            app:layout_constraintTop_toTopOf="@id/tvBillDate" />

                        <mm.technomation.mmtext.MMTextView
                            android:id="@+id/tvBillDate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_medium_2"
                            android:layout_marginBottom="@dimen/margin_medium_2"
                            android:gravity="end"
                            android:textColor="@color/primary_text"
                            android:textSize="@dimen/text_regular_3x"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="@id/tvUnpaidAmount"
                            app:layout_constraintStart_toEndOf="@+id/lblBillDate"
                            app:layout_constraintTop_toBottomOf="@id/tvUnpaidAmount"
                            tools:text="@string/dummy_paid_at" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvBank"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_medium_2"
                    android:layout_marginBottom="@dimen/margin_medium_3"
                    app:layout_constraintBottom_toTopOf="@id/cvHowToPay"
                    app:layout_constraintEnd_toEndOf="@id/cvPaymentAmount"
                    app:layout_constraintStart_toStartOf="@id/cvPaymentAmount"
                    app:layout_constraintTop_toBottomOf="@id/cvPaymentAmount">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <mm.technomation.mmtext.MMTextView
                            android:id="@+id/lblChooseBank"
                            style="@style/CategoryTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_medium"
                            android:layout_marginTop="@dimen/margin_medium_2"
                            android:layout_marginEnd="@dimen/margin_medium_2"
                            android:text="@string/lbl_choose_bank"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvBank"
                            android:layout_width="match_parent"
                            android:layout_height="460dp"
                            android:layout_marginStart="@dimen/margin_medium_3"
                            android:layout_marginTop="@dimen/margin_medium_2"
                            android:layout_marginBottom="@dimen/margin_medium_2"
                            android:nestedScrollingEnabled="false"
                            android:overScrollMode="never"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/lblChooseBank" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvHowToPay"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_medium_3"
                    app:cardCornerRadius="@dimen/margin_small"
                    app:layout_constraintEnd_toEndOf="@id/cvPaymentAmount"
                    app:layout_constraintStart_toStartOf="@id/cvPaymentAmount"
                    app:layout_constraintTop_toBottomOf="@id/cvBank">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <mm.technomation.mmtext.MMTextView
                            android:id="@+id/lblHowToPay"
                            style="@style/CategoryTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_medium"
                            android:layout_marginTop="@dimen/margin_medium_2"
                            android:layout_marginEnd="@dimen/margin_medium_2"
                            android:text="@string/lbl_how_to_pay"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.google.android.exoplayer2.ui.PlayerView
                            android:id="@+id/playerView"
                            android:layout_width="0dp"
                            android:layout_height="248dp"
                            android:layout_marginTop="@dimen/margin_medium_2"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/lblHowToPay"
                            app:resize_mode="fixed_width" />

                        <ProgressBar
                            android:id="@+id/pbPlayer"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:elevation="@dimen/margin_small"
                            app:layout_constraintBottom_toBottomOf="@id/playerView"
                            app:layout_constraintEnd_toEndOf="@id/playerView"
                            app:layout_constraintStart_toStartOf="@id/playerView"
                            app:layout_constraintTop_toTopOf="@id/playerView" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

        <mm.technomation.mmtext.MMButtonView
            android:id="@+id/btnOpenMobileBankingApp"
            style="@style/ButtonPrimary"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_marginEnd="@dimen/margin_medium"
            android:layout_marginBottom="@dimen/margin_large"
            android:text="@string/lbl_open_kbz_mobile_banking"
            android:layout_alignParentBottom="true"/>


    </RelativeLayout>

    <WebView
        android:id="@+id/wvPayment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>

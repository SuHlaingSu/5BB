<?xml version="1.0" encoding="utf-8"?>
<com.fivebb.selfcare.viewpods.AccountDetailItemViewPod
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <mm.technomation.mmtext.MMTextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/editEmail"
            android:layout_marginStart="@dimen/margin_medium_2"
            android:layout_marginEnd="@dimen/margin_medium_2"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/text_regular"/>

    <TextView
        android:id="@+id/editEmail"
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:layout_constraintStart_toEndOf="@id/tvName"
        android:layout_marginEnd="@dimen/margin_medium"
        android:layout_marginStart="@dimen/margin_medium"
        android:visibility="invisible"
        android:background="@drawable/ic_edit_pencil"/>

    <View
            android:id="@+id/vVertical"
            android:layout_width="1dp"
            android:layout_height="@dimen/margin_medium_2"
            android:background="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="@id/tvName"
            app:layout_constraintTop_toBottomOf="@id/tvName"
            android:layout_marginTop="@dimen/margin_xsmall"
            android:layout_marginStart="@dimen/margin_medium_2"/>

    <View
            android:id="@+id/vHorizontal"
            android:layout_width="@dimen/margin_medium_2"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="@id/vVertical"
            app:layout_constraintBottom_toBottomOf="@id/vVertical"/>

    <mm.technomation.mmtext.MMTextView
            android:id="@+id/tvValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/vHorizontal"
            app:layout_constraintTop_toBottomOf="@id/tvName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="@dimen/margin_card_medium"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginEnd="@dimen/margin_medium_2"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_regular"
            android:textStyle="bold"/>

</com.fivebb.selfcare.viewpods.AccountDetailItemViewPod>
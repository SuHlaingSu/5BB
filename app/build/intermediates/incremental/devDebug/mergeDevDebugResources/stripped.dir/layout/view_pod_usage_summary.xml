<?xml version="1.0" encoding="utf-8"?>
<com.fivebb.selfcare.viewpods.UsageSummaryViewPod xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <mm.technomation.mmtext.MMTextView
        android:id="@+id/lblUsageSummary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/lbl_usage_summary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="@dimen/margin_medium_2"
            android:layout_marginEnd="@dimen/margin_medium_2"
            style="@style/CategoryTitle"/>

    <androidx.cardview.widget.CardView
            android:id="@+id/cvUsageSummary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_medium_2"
            android:layout_marginTop="@dimen/margin_medium_2"
            android:layout_marginEnd="@dimen/margin_medium_2"
            android:layout_marginBottom="@dimen/margin_small"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lblUsageSummary">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <com.fivebb.selfcare.components.ArcProgress
                    android:id="@+id/arcProgress"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="21:9"
                    android:layout_marginBottom="@dimen/margin_medium_2"
                    app:arc_finished_color="@android:color/holo_red_light"
                    app:arc_progress="100"
                    app:arc_stroke_color="@color/colorPrimary"
                    app:arc_stroke_width="@dimen/margin_medium"
                    app:arc_unfinished_color="@color/white_full"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
<!--
            android:elevation="@dimen/margin_xsamll"
-->

            <mm.technomation.mmtext.MMTextView
                    android:id="@+id/tvPackageName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/margin_small"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/text_small"
                    app:layout_constraintBottom_toBottomOf="@id/arcProgress"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:text="@string/dummy_starter_pack" />

            <mm.technomation.mmtext.MMTextView
                    android:id="@+id/tvLTESpeed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_medium"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/text_regular"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/tvPackageName"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:text="@string/dummy_lte_speed" />

            <mm.technomation.mmtext.MMTextView
                    android:id="@+id/tvDayLeft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_medium"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="@dimen/text_regular_2x"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/tvLTESpeed"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:text="@string/dummy_day_left" />


            <TextView
                    android:id="@+id/lblDayZero"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_small"
                    android:layout_marginBottom="@dimen/margin_medium_2"
                    android:gravity="end"
                    android:text="0"
                    android:textColor="@color/divider"
                    android:textSize="@dimen/text_regular"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/arcProgress"
                    app:layout_constraintWidth_percent="0.15" />

            <View
                    android:id="@+id/vTotalDayCountPosition"
                    android:layout_width="0dp"
                    android:layout_height="14dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/arcProgress"
                    app:layout_constraintWidth_percent="0.15" />

            <TextView
                    android:id="@+id/lblTotalDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_medium_2"
                    android:layout_marginBottom="@dimen/margin_medium"
                    android:textColor="@color/divider"
                    android:textSize="@dimen/text_regular"
                    app:layout_constraintEnd_toStartOf="@id/vTotalDayCountPosition"
                    app:layout_constraintStart_toStartOf="@id/vTotalDayCountPosition"
                    app:layout_constraintTop_toBottomOf="@id/arcProgress"
                    tools:text="100" />

            <TextView
                    android:id="@+id/lblTotalHalfDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/divider"
                    android:textSize="@dimen/text_regular"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/arcProgress"
                    android:layout_marginTop="@dimen/margin_large"
                    android:paddingTop="@dimen/margin_small"
                    android:gravity="center"
                    tools:text="50" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</com.fivebb.selfcare.viewpods.UsageSummaryViewPod>
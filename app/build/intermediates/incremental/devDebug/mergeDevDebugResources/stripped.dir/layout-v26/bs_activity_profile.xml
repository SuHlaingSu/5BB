<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefresh"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_full"
        tools:context="com.fivebb.selfcare.activities.ProfileActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:id="@+id/ivBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_keyboard_arrow_left_black_48dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="@dimen/margin_medium_2"
                android:layout_marginTop="@dimen/margin_medium_2"/>

        <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.5"
                android:background="@drawable/bs_bg_main"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/ivBack"
                android:layout_marginStart="@dimen/margin_large"
                app:layout_constraintTop_toTopOf="parent"/>

        <mm.technomation.mmtext.MMTextView
                android:id="@+id/txtProfile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/lbl_profile"
                android:textColor="@color/white_full"
                android:paddingStart="@dimen/margin_xxlarge"
                app:layout_constraintStart_toEndOf="@id/ivBack"
                app:layout_constraintTop_toTopOf="@id/ivBack"
                app:layout_constraintBottom_toBottomOf="@id/ivBack"
                app:layout_constraintEnd_toEndOf="parent"
                style="@style/ScreenTitle"/>

        <ImageView
                android:id="@+id/logout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/txtProfile"
                app:layout_constraintStart_toEndOf="@id/txtProfile"
                app:layout_constraintTop_toTopOf="@+id/txtProfile"
                android:src="@drawable/ic_log_out"
                android:visibility="gone"
                android:layout_marginEnd="@dimen/margin_medium_2"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

        <androidx.cardview.widget.CardView
                android:id="@+id/cvProfile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="@dimen/margin_medium_2"
                android:layout_marginEnd="@dimen/margin_medium_2"
                android:layout_marginTop="@dimen/margin_xxlarge"
                app:layout_constraintTop_toBottomOf="@id/ivBack"
                app:cardCornerRadius="@dimen/margin_small">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_large">

                <mm.technomation.mmtext.MMTextView
                        android:id="@+id/tvName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/lbl_profile_name"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/text_regular"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="@dimen/margin_xxlarge"
                        android:layout_marginStart="@dimen/margin_xxlarge"
                        android:layout_marginEnd="@dimen/margin_xxxlarge"/>

                <mm.technomation.mmtext.MMTextView
                        android:id="@+id/tvAccountNo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/lbl_profile_account_no"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/text_regular"
                        app:layout_constraintTop_toBottomOf="@id/tvName"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="@dimen/margin_small"
                        android:layout_marginStart="@dimen/margin_xxlarge"
                        android:layout_marginEnd="@dimen/margin_xxxlarge"/>

                <mm.technomation.mmtext.MMTextView
                        android:id="@+id/tvAdvPay"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lbl_profile_adv_pay"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/text_regular"
                        android:textAlignment="viewStart"
                        app:layout_constraintTop_toBottomOf="@id/tvStatus"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/txtAdvPay"
                        android:layout_marginTop="@dimen/margin_small"
                        android:layout_marginStart="@dimen/margin_xxlarge"/>

                <mm.technomation.mmtext.MMTextView
                        android:id="@+id/txtAdvPay"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary_text"
                        android:textStyle="bold"
                        android:textAlignment="viewStart"
                        android:textSize="@dimen/text_regular"
                        app:layout_constraintTop_toBottomOf="@id/tvStatus"
                        app:layout_constraintStart_toEndOf="@id/tvAdvPay"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="@dimen/margin_small"
                        android:layout_marginEnd="@dimen/margin_xxxlarge"/>

                <mm.technomation.mmtext.MMTextView
                        android:id="@+id/tvStatus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/lbl_profile_status"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/text_regular"
                        app:layout_constraintTop_toBottomOf="@id/tvAccountNo"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="@dimen/margin_small"
                        android:layout_marginStart="@dimen/margin_xxlarge"
                        android:layout_marginEnd="@dimen/margin_xxxlarge"/>

                <mm.technomation.mmtext.MMTextView
                        android:id="@+id/tvBillingStatus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/lbl_profile_billing_status"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/text_regular"
                        app:layout_constraintTop_toBottomOf="@id/tvAdvPay"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="@dimen/margin_small"
                        android:layout_marginStart="@dimen/margin_xxlarge"
                        android:visibility="gone"
                        android:layout_marginEnd="@dimen/margin_xxxlarge"/>

                <!-- <LinearLayout
                         android:id="@+id/btnAdvPay"
                         android:layout_width="0dp"
                         android:visibility="invisible"
                         android:layout_height="wrap_content"
                         android:orientation="vertical"
                         android:background="@drawable/bg_adv"

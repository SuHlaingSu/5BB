                 </LinearLayout>-->
                <androidx.cardview.widget.CardView
                        android:id="@+id/btnAdvPay"
                        android:visibility="gone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tvBillingStatus"
                        app:layout_constraintStart_toStartOf="@id/btnPaymentHistory"
                        android:layout_marginTop="@dimen/margin_large"
                        app:layout_constraintEnd_toEndOf="@id/btnChangePassword"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="5dp">
                    <ImageButton
                            android:id="@+id/imgDollar"
                            android:background="@color/white_full"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/ic_adv_pay"/>

                    <Button
                            android:id="@+id/txtTooltips"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="right"
                            android:layout_marginTop="@dimen/margin_small"
                            android:layout_marginEnd="@dimen/margin_medium"
                            android:background="@android:color/transparent"
                            android:drawableEnd="@drawable/ic_tooltips"
                            android:tooltipText="@string/txt_tooltips" />
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="TOP UP"
                            android:visibility="gone"
                            android:textColor="@color/black_full"
                            android:gravity="center"
                            android:layout_marginTop="50dp"/>
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="60dp"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginBottom="15dp"
                            android:orientation="horizontal">
                        <TextView
                                android:id="@+id/lblAdvPay"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="2"
                                android:paddingStart="3dp"
                                android:paddingBottom="5dp"
                                android:textAlignment="viewStart"
                                android:textColor="@color/black_full"
                                android:text="@string/lbl_profile_adv_pay"/>
                        <TextView
                                android:id="@+id/txtPay"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textAlignment="viewEnd"
                                android:gravity="left|center_vertical"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:paddingBottom="5dp"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/black_full"
                                android:text="0 MMK"
                                tools:ignore="RtlCompat" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <mm.technomation.mmtext.MMButtonView
                        android:id="@+id/btnPaymentHistory"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_primary_border"
                        android:text="@string/lbl_payment_history"
                        app:layout_constraintTop_toBottomOf="@id/btnAdvPay"
                        app:layout_constraintStart_toStartOf="parent"
                        android:drawableTop="@drawable/ic_payment_history"
                        android:drawablePadding="@dimen/margin_medium"
                        android:layout_marginTop="@dimen/margin_large"
                        android:paddingTop="@dimen/margin_medium_3"
                        android:paddingBottom="@dimen/margin_medium_2"
                        android:paddingStart="@dimen/margin_small"
                        android:paddingEnd="@dimen/margin_small"
                        android:textAllCaps="false"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintHorizontal_chainStyle="spread_inside"
                        app:layout_constraintEnd_toStartOf="@+id/btnChangePassword"
                        android:layout_marginEnd="@dimen/margin_large"
                        android:layout_marginStart="@dimen/margin_xlarge"/>

                <mm.technomation.mmtext.MMButtonView
                        android:id="@+id/btnChangePassword"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_primary_border"
                        android:text="@string/lbl_change_password"
                        app:layout_constraintTop_toBottomOf="@id/btnAdvPay"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:drawableTop="@drawable/ic_change_password"
                        android:drawablePadding="@dimen/margin_medium"
                        android:layout_marginTop="@dimen/margin_large"
                        android:paddingTop="@dimen/margin_medium_3"
                        android:paddingBottom="@dimen/margin_medium_2"
                        android:paddingStart="@dimen/margin_small"
                        android:paddingEnd="@dimen/margin_small"
                        android:textAllCaps="false"
                        app:layout_constraintStart_toEndOf="@+id/btnPaymentHistory"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintHorizontal_chainStyle="spread_inside"
                        android:layout_marginEnd="@dimen/margin_xlarge"/>

                <mm.technomation.mmtext.MMButtonView
                        android:id="@+id/btnAccountDetail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_primary_border"
                        android:text="@string/lbl_account_detail"
                        app:layout_constraintTop_toBottomOf="@id/btnPaymentHistory"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginBottom="@dimen/margin_xxlarge"
                        android:drawableTop="@drawable/ic_account_detail"
                        android:layout_marginTop="@dimen/margin_large"
                        android:drawablePadding="@dimen/margin_medium"
                        android:paddingTop="@dimen/margin_medium_3"
                        android:paddingBottom="@dimen/margin_medium_2"
                        android:paddingStart="@dimen/margin_small"
                        android:paddingEnd="@dimen/margin_small"
                        android:textAllCaps="false"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintHorizontal_chainStyle="spread_inside"
                        app:layout_constraintEnd_toStartOf="@+id/btnLogOut"
                        android:layout_marginEnd="@dimen/margin_large"
                        android:layout_marginStart="@dimen/margin_xlarge"/>

                <mm.technomation.mmtext.MMButtonView
                        android:id="@+id/btnLogOut"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_primary_border"
                        android:text="@string/lbl_log_out"
                        app:layout_constraintTop_toBottomOf="@id/btnChangePassword"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginBottom="@dimen/margin_xxlarge"
                        android:drawableTop="@drawable/ic_log_out"
                        android:layout_marginTop="@dimen/margin_large"
                        android:drawablePadding="@dimen/margin_medium"
                        android:paddingTop="@dimen/margin_medium_3"
                        android:paddingBottom="@dimen/margin_medium_2"
                        android:paddingStart="@dimen/margin_small"
                        android:paddingEnd="@dimen/margin_small"
                        android:textAllCaps="false"
                        app:layout_constraintStart_toEndOf="@+id/btnAccountDetail"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintHorizontal_chainStyle="spread_inside"
                        android:layout_marginEnd="@dimen/margin_xlarge"/>



            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ivBack"
                android:layout_marginStart="@dimen/margin_xxlarge"
                android:layout_marginTop="@dimen/margin_medium_2"
                app:cardElevation="2dp"
                app:cardCornerRadius="@dimen/margin_large">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <ImageView
                        android:id="@+id/ivLogo"
                        android:layout_width="@dimen/logo_width_include_padding"
                        android:layout_height="@dimen/logo_height_include_padding"
                        android:src="@drawable/fivebb_logo"
                        android:scaleType="fitXY"
                        android:paddingTop="@dimen/margin_medium"
                        android:paddingBottom="@dimen/margin_medium"
                        android:paddingStart="@dimen/margin_medium_2"
                        android:paddingEnd="@dimen/margin_medium_2"
                        android:background="@drawable/bg_white_fill_round"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                        android:id="@+id/tvAppVersion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="V0.5.0"
                        app:layout_constraintStart_toEndOf="@id/ivLogo"
                        app:layout_constraintTop_toTopOf="@id/ivLogo"
                        app:layout_constraintBottom_toBottomOf="@id/ivLogo"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="@dimen/margin_medium_2"
                        android:textSize="@dimen/text_regular_2x"
                        android:textColor="@color/divider"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

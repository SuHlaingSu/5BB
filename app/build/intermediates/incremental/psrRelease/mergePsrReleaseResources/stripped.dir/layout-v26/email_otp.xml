<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_keyboard_arrow_left_black_48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/margin_medium_2"
        android:layout_marginTop="@dimen/margin_medium_2"
        android:contentDescription="@string/todo" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.5"
        android:background="@drawable/bg_main_image_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iBack"
        android:layout_marginStart="@dimen/margin_large"
        app:layout_constraintTop_toTopOf="parent"/>

    <mm.technomation.mmtext.MMTextView
        android:id="@+id/labelEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/lbl_email"
        android:textAlignment="textEnd"
        android:paddingStart="@dimen/margin_xxlarge"
        app:layout_constraintStart_toEndOf="@id/iBack"
        app:layout_constraintTop_toTopOf="@id/iBack"
        app:layout_constraintBottom_toBottomOf="@id/iBack"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/ScreenTitle"/>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white_full"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lyLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/view"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/imgEmail"
            android:layout_width="96dp"
            android:layout_height="96dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/img_email_verify"/>

        <TextView
            android:id="@+id/lbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verification"
            android:textSize="28sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black_full"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imgEmail"
            android:textStyle="bold"/>

        <mm.technomation.mmtext.MMTextView
            android:id="@+id/lblAlert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lbl"
            android:text="@string/lbl_text"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/conOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/lyLinear"
        app:layout_constraintBottom_toBottomOf="parent">

        <EditText
            android:id="@+id/etOTP"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="******"
            android:inputType = "numberPassword"
            android:gravity="center"
            android:maxLength="6"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/bg_primary_border"/>

        <Button
            android:id="@+id/btnOTP"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/bg_fill_primary_round"
            android:text="@string/lbl_btn_verify"
            android:textAlignment="center"
            android:textColor="@color/black_full"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/etOTP" />

        <mm.technomation.mmtext.MMTextView
            android:id="@+id/lblResend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/btnOTP"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/lblResendAgain"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:text="@string/lbl_did_not_code"/>

        <mm.technomation.mmtext.MMTextView
            android:id="@+id/lblResendAgain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/lblResend"
            app:layout_constraintTop_toBottomOf="@id/btnOTP"
            android:textSize="14sp"
            android:textColor="@color/com_facebook_blue"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:text="@string/lbl_resend"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

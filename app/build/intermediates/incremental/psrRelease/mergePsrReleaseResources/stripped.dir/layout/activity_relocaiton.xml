<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_full"
        android:focusable="true"
        android:focusableInTouchMode="true"
        tools:context="com.fivebb.selfcare.activities.RelocationActivity">

    <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_medium_2"
            android:layout_marginTop="@dimen/margin_medium_2"
            android:src="@drawable/ic_keyboard_arrow_left_black_48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <ImageView
            android:id="@+id/bgMain"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.5"
            android:background="@drawable/bg_main_image_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivBack"
            app:layout_constraintTop_toTopOf="parent"/>

    <mm.technomation.mmtext.MMTextView
            android:id="@+id/tvScreenTitle"
            style="@style/ScreenTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/lbl_relocation_screen_title"
            app:layout_constraintBottom_toBottomOf="@id/ivBack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/ivBack" />

    <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivBack"
            android:overScrollMode="never"
            android:paddingTop="@dimen/margin_medium"
            android:paddingBottom="@dimen/margin_large"
            android:clipToPadding="false">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_full">

            <androidx.cardview.widget.CardView
                    android:id="@+id/cvRemark"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="@dimen/margin_medium_2"
                    android:layout_marginStart="@dimen/margin_medium_2"
                    android:layout_marginEnd="@dimen/margin_medium_2"
                    app:cardCornerRadius="@dimen/margin_small"
                    app:cardBackgroundColor="@color/bg_navigations">

                <mm.technomation.mmtext.MMTextView
                        android:id="@+id/lbl_remark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingMultiplier="1.2"
                        android:text="@string/lbl_relocation_remark"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/text_regular_2x"
                        android:layout_margin="@dimen/margin_medium_2"/>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                    android:id="@+id/cvChangeAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/margin_small"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cvRemark"
                    android:layout_marginStart="@dimen/margin_medium_2"
                    android:layout_marginEnd="@dimen/margin_medium_2"
                    android:layout_marginTop="@dimen/margin_medium_3">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <mm.technomation.mmtext.MMTextView
                            style="@style/CategoryTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_medium_2"
                            android:layout_marginTop="@dimen/margin_medium_2"
                            android:text="@string/lbl_change_address" />

                    <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tilHomeNumber"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_medium_2"
                            android:layout_marginTop="@dimen/margin_medium_2"
                            android:layout_marginEnd="@dimen/margin_medium_2"
                            app:hintTextAppearance="@style/TextInputLayoutHint"
                            tools:hint="@string/hint_home_number">

                        <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etHomeNumber"
                                style="@style/RegularEditText"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/edittext_height"
                                android:drawablePadding="@dimen/margin_medium"
                                android:maxLines="1"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tilResidentialQuarter"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_medium_2"
                            android:layout_marginTop="@dimen/margin_medium_2"
                            android:layout_marginEnd="@dimen/margin_medium_2"
                            app:hintTextAppearance="@style/TextInputLayoutHint"
                            tools:hint="@string/hint_residential_quarter">

                        <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etResidentialQuarter"
                                style="@style/RegularEditText"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/edittext_height"
                                android:drawablePadding="@dimen/margin_medium"
                                android:maxLines="1"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tilStreetOrRoad"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_medium_2"
                            android:layout_marginTop="@dimen/margin_medium_2"
                            android:layout_marginEnd="@dimen/margin_medium_2"
                            app:hintTextAppearance="@style/TextInputLayoutHint"
                            tools:hint="@string/hint_street_or_road">

                        <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etStreetOrRoad"
                                style="@style/RegularEditText"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/edittext_height"
                                android:drawablePadding="@dimen/margin_medium"
                                android:maxLines="1"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tilTownship"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_medium_2"
                            android:layout_marginTop="@dimen/margin_medium_2"
                            android:layout_marginEnd="@dimen/margin_medium_2"
                            app:hintTextAppearance="@style/TextInputLayoutHint"
                            tools:hint="@string/hint_township">

                        <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etTownship"
                                style="@style/RegularEditText"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/edittext_height"
                                android:drawablePadding="@dimen/margin_medium"
                                android:layout_marginBottom="@dimen/margin_medium_2"
                                android:maxLines="1"/>

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <mm.technomation.mmtext.MMButtonView
                    android:id="@+id/btnSubmit"
                    style="@style/ButtonPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height"
                    android:layout_marginStart="@dimen/margin_medium_2"
                    android:layout_marginTop="@dimen/margin_large"
                    android:layout_marginEnd="@dimen/margin_medium_2"
                    android:layout_marginBottom="@dimen/margin_medium_3"
                    android:text="@string/lbl_submit"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cvChangeAddress" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>


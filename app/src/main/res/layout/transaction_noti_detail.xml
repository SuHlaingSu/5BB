<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_keyboard_arrow_left_black_48dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/margin_medium_2"
            android:layout_marginStart="@dimen/margin_medium_2"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.5"
            android:background="@drawable/bg_main_image_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivBack"
            app:layout_constraintTop_toTopOf="parent"/>

    <mm.technomation.mmtext.MMTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Bill Invoice"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@id/ivBack"
            app:layout_constraintBottom_toBottomOf="@id/ivBack"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/ScreenTitle"/>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/body"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="70dp"
            android:background="@color/white_full">
        <ImageView
                android:id="@+id/ivLogo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:layout_constraintWidth_percent="0.5"
                app:layout_constraintDimensionRatio="1:1"
                android:background="@drawable/ic_transaction_noti"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/margin_large"/>

        <mm.technomation.mmtext.MMTextView
                android:id="@+id/lbl_Payment_success"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment Successful"
                android:textSize="20sp"
                android:textColor="@color/black_full"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginEnd="@dimen/margin_medium_2_12dp"
                app:layout_constraintTop_toBottomOf="@id/ivLogo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        <View
                android:id="@+id/vDivider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider"
                android:layout_marginTop="@dimen/margin_large"
                app:layout_constraintTop_toBottomOf="@id/lbl_Payment_success"/>

        <TextView
                android:id="@+id/lblTransaction_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_medium_2_12dp"
                android:layout_marginTop="@dimen/margin_large"
                android:text="Transaction time :"
                android:textColor="@color/black_full"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/vDivider" />

        <TextView
                android:id="@+id/lblAccountNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_medium_2_12dp"
                android:layout_marginTop="@dimen/margin_large"
                android:text="Account No. :"
                android:textColor="@color/black_full"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lblTransaction_time" />

        <TextView
                android:id="@+id/lblBillInv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_medium_2_12dp"
                android:layout_marginTop="@dimen/margin_large"
                android:text="Bill Invoice No. :"
                android:textColor="@color/black_full"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lblAccountNo" />

        <TextView
                android:id="@+id/lblPackage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_medium_2_12dp"
                android:layout_marginTop="@dimen/margin_large"
                android:text="Package :"
                android:textColor="@color/black_full"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lblBillInv" />

        <TextView
                android:id="@+id/lblType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_medium_2_12dp"
                android:layout_marginTop="@dimen/margin_large"
                android:text="Type :"
                android:textColor="@color/black_full"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lblPackage" />

        <TextView
                android:id="@+id/lblBillMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_medium_2_12dp"
                android:layout_marginTop="@dimen/margin_large"
                android:text="Bill Month :"
                android:textColor="@color/black_full"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lblType" />

        <TextView
                android:id="@+id/lblPaymentMethod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_medium_2_12dp"
                android:layout_marginTop="@dimen/margin_large"
                android:text="Payment Method :"
                android:textColor="@color/black_full"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lblBillMonth" />

        <TextView
                android:id="@+id/lblAmt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_medium_2_12dp"
                android:layout_marginTop="@dimen/margin_large"
                android:text="Amount :"
                android:textColor="@color/black_full"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lblPaymentMethod" />
        <!--Data-->
        <TextView
                android:id="@+id/txtTransaction_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="12/11/2012 11:02:59"
                android:textStyle="bold"
                android:textColor="@color/black_full"
                android:layout_marginTop="@dimen/margin_large"
                android:layout_marginEnd="@dimen/margin_medium_2_12dp"
                app:layout_constraintTop_toBottomOf="@id/vDivider"
                app:layout_constraintEnd_toEndOf="parent"
                style="@style/CategoryTitle"/>
        <TextView
                android:id="@+id/txtAccountNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="YGNFX0000001"
                android:textStyle="bold"
                android:textColor="@color/black_full"
                android:layout_marginTop="@dimen/margin_large"
                android:layout_marginEnd="@dimen/margin_medium_2_12dp"
                app:layout_constraintTop_toBottomOf="@id/txtTransaction_time"
                app:layout_constraintEnd_toEndOf="parent"
                style="@style/CategoryTitle"/>

        <TextView
                android:id="@+id/txtBillInv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="INV00000000000223"
                android:textStyle="bold"
                android:textColor="@color/black_full"
                android:layout_marginTop="@dimen/margin_large"
                android:layout_marginEnd="@dimen/margin_medium_2_12dp"
                app:layout_constraintTop_toBottomOf="@id/txtAccountNo"
                app:layout_constraintEnd_toEndOf="parent"
                style="@style/CategoryTitle"/>
        <TextView
                android:id="@+id/txtPackage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="LTE_PackageName"
                android:textStyle="bold"
                android:textColor="@color/black_full"
                android:layout_marginTop="@dimen/margin_large"
                android:layout_marginEnd="@dimen/margin_medium_2_12dp"
                app:layout_constraintTop_toBottomOf="@id/txtBillInv"
                app:layout_constraintEnd_toEndOf="parent"
                style="@style/CategoryTitle"/>

        <TextView
                android:id="@+id/txtType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Regular Invoice"
                android:textStyle="bold"
                android:textColor="@color/black_full"
                android:layout_marginTop="@dimen/margin_large"
                android:layout_marginEnd="@dimen/margin_medium_2_12dp"
                app:layout_constraintTop_toBottomOf="@id/txtPackage"
                app:layout_constraintEnd_toEndOf="parent"
                style="@style/CategoryTitle"/>

        <TextView
                android:id="@+id/txtBillMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="November 2012"
                android:textStyle="bold"
                android:textColor="@color/black_full"
                android:layout_marginTop="@dimen/margin_large"
                android:layout_marginEnd="@dimen/margin_medium_2_12dp"
                app:layout_constraintTop_toBottomOf="@id/txtType"
                app:layout_constraintEnd_toEndOf="parent"
                style="@style/CategoryTitle"/>

        <TextView
                android:id="@+id/txtPaymentMethod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Kpay"
                android:textStyle="bold"
                android:textColor="@color/black_full"
                android:layout_marginTop="@dimen/margin_large"
                android:layout_marginEnd="@dimen/margin_medium_2_12dp"
                app:layout_constraintTop_toBottomOf="@id/txtBillMonth"
                app:layout_constraintEnd_toEndOf="parent"
                style="@style/CategoryTitle"/>

        <TextView
                android:id="@+id/txtAmt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="50000 Ks"
                android:textStyle="bold"
                android:textColor="@color/black_full"
                android:layout_marginTop="@dimen/margin_large"
                android:layout_marginEnd="@dimen/margin_medium_2_12dp"
                app:layout_constraintTop_toBottomOf="@id/txtPaymentMethod"
                app:layout_constraintEnd_toEndOf="parent"
                style="@style/CategoryTitle"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
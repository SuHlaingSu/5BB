<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/lblMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:text="@string/lbl_new_email"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/etMessage"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="@string/lbl_enter_email"
        android:textSize="14sp"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lblMsg"
        android:background="@drawable/bg_primary_border"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/conTwo"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="@id/etMessage"
        app:layout_constraintTop_toBottomOf="@id/etMessage">

        <mm.technomation.mmtext.MMButtonView
            android:id="@+id/btnOK"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="@string/lbl_add_email"
            android:paddingHorizontal="@dimen/margin_medium_2_10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/black_full"
            android:background="@drawable/bg_fill_primary_round"/>

        <mm.technomation.mmtext.MMButtonView
            android:id="@+id/btnCancel"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:text="@string/lbl_cancel_email"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnOK"
            android:layout_marginEnd="@dimen/margin_medium"
            android:textColor="@color/black_full"
            android:background="@drawable/bg_fill_primary_round"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

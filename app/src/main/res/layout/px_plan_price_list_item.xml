<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginHorizontal="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_medium"
            app:cardCornerRadius="@dimen/margin_medium">

        <!--<RadioGroup
                android:id="@+id/rdGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
            <RadioButton
                    android:id="@+id/rdo_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
    </RadioGroup>-->
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginBottom="@dimen/margin_medium">
            <TextView
                    android:id="@+id/lblPlanName"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:text="Plan Name"
                    android:gravity="left"
                    android:textStyle="bold"
                    android:textColor="@color/black_full"
                    android:textSize="@dimen/text_regular_3x"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:layout_marginHorizontal="@dimen/margin_medium_3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            <TextView
                    android:id="@+id/lblPlanNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Plan Note"
                    android:drawablePadding="@dimen/margin_small"
                    android:drawableStart="@drawable/calendar"
                    android:textColor="@color/blue"
                    android:gravity="left|center"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:layout_marginHorizontal="@dimen/margin_medium_3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/lblPlanName"/>
            <TextView
                    android:id="@+id/lblPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price"
                    android:textSize="@dimen/text_heading_1x"
                    android:gravity="left"
                    android:visibility="gone"
                    android:textColor="@color/black_full"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:layout_marginHorizontal="@dimen/margin_medium_3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/lblPlanNote"/>

            <TextView
                    android:id="@+id/lblTaxNote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sfew"
                    android:gravity="left|center"
                    android:drawablePadding="@dimen/margin_small"
                    android:drawableStart="@drawable/speedometer"
                    android:layout_marginTop="@dimen/margin_medium"
                    app:layout_constraintStart_toStartOf="@id/lblPlanNote"
                    app:layout_constraintTop_toBottomOf="@id/lblPlanNote"/>

            <Button
                    android:id="@+id/btnSelect"
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:text="1,000,000 MMK"
                    android:padding="@dimen/margin_small_n"
                    android:textColor="@color/black_full"
                    android:background="@drawable/bg_fill_primary_round"
                    android:gravity="center"
                    android:layout_marginEnd="@dimen/margin_small"
                    app:layout_constraintTop_toBottomOf="@id/lblPrice"
                    app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>

